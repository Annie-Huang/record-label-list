{
    "extends": [
        "tslint:latest",
        "tslint-react",
        "tslint-config-prettier"
    ],
    "linterOptions": {
        "exclude": [
            "config/**/*.js",
            "node_modules/**/*.ts",
            "coverage/lcov-report/*.js"
        ]
    },
    "rulesDirectory": [
        "tslint-plugin-prettier"
    ],
    "rules": {
        "interface-name" : [true, "never-prefix"],
        "jsx-no-multiline-js": false,
        "object-literal-sort-keys": false,
        "quotemark": [
            true,
            "single",
            "avoid-escape"
        ]
    }
}
